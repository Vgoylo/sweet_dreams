
<main>
  <section class="py-5 text-center container">
    <div class="row py-lg-5">
      <div class="col-lg-6 col-md-8 mx-auto">
        <h1 class="fw-light">Dreams <%= @user.name %><%= @user.email %></h1>
        <p class="lead text-muted"><h3>Welcome to my dreams.</h3></p>
        <p>
          <%= link_to 'All dream', dreams_path, class: 'btn btn-primary' %>
          <%= link_to 'All users', users_path, class: 'btn btn-primary' %>
        </p>
      </div>
    </div>
  </section>
  <div class="py-5 text-center container card-body ">
        <div class="btn-group">
            <% @dreams.each do |dream| %>
              <div class="card-body">
                <p class="card-text"><%= dream.title %></p>
                <p class="card-text"><%= dream.description.html_safe %></p>
                <div class="mb-4 text-center ">
                  <% if dream.image %>
                    <%= image_tag(dream.image.url(:thumb)) %>
                  <% else %>
                    <%= image_tag("assets/images/default_image.jpg") %>
                  <% end %>
                </div>
                <div class="d-flex justify-content-between align-items-center">
                  <div class="btn-group">
                    <%= link_to 'Open', dream_path, class: 'btn btn-primary' %>
                    <%= link_to 'Edit', dream_path, class: "btn btn-sm btn-outline-secondary" %>
                  </div>
                </div>
              </div>
          <% end %>
      </div>
    </div>
  </div>
</main>