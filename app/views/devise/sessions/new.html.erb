<div class="container">
  <div class="row">
    <div class="col-md-7">
      <%= form_for(resource, as: resource_name, url: session_path(resource_name), class: 'form-signin') do |f| %>

        <div class="field"><h2 class="h3 mb-3 fw-normal"><%= t('login_label')%></h2>
          <%= f.label  t('email_label')%><br />
          <%= f.email_field :email, autofocus: true, autocomplete: "email", class: "form-control"%>
        </div>

        <div class="field">
          <%= f.label  t('password_label') %><br />
          <%= f.password_field :password, autocomplete: "current-password", class: "form-control" %>
        </div>

        <% if devise_mapping.rememberable? %>
          <div class="field mb-3">
            <%= f.check_box :remember_me %>
            <%= f.label t('remember_me_label')%>
          </div>
        <% end %>

        <div class="actions">
          <%= f.submit t('log_in'), class: "btn btn-primary" %>
        </div>
      <% end %>

      <%= render "devise/shared/links" %>
    </div>
    </div>
    <div class="col"></div>
  </div>
</div>