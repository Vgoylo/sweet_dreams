<div class="container">
  <header class="d-flex flex-wrap justify-content-center py-3 mb-4 border-bottom">
    <a href="<%= root_path %>" class="d-flex align-items-center mb-3 mb-md-0 me-md-auto text-dark text-decoration-none">
      <svg class="bi me-2" width="40" height="32"><use xlink:href="root_path"></use></svg>
      <span  class= 'btn btn-primary'>Sweet Dreams</span>
    </a>
    <% if user_signed_in? %>
        <ul class="nav nav-pills">
          <li class="nav-item">
            <%= link_to 'Users', users_path, class: "nav-link" %>
          </li>
          <li class="nav-item">
            <%= link_to 'Dreams', dreams_path, class: "nav-link" %>
          </li>
          <li class="nav-item">
          <%= link_to 'Categories', categories_path, class: "nav-link" %>
          </li>
          <li class="nav-item">
          <%= link_to 'Tags', tags_path, class: "nav-link" %>
          </li>
          <li class="nav-item">
            <%= link_to 'My Account', current_user, class: "nav-link" %>
          </li>
          <li class="nav-item">
            <%= link_to 'Logout', destroy_user_session_path, class: "nav-link", method: :delete %>
          </li>
        </ul>
        <% else %>
          <ul class="nav nav-pills">
          <li class="nav-item">
            <%= link_to 'Login', new_user_session_path, class: "nav-link" %></td>
          </li>
          <li class="nav-item">
            <%= link_to 'Register now', new_user_registration_path, class: "nav-link" %>
          </li>
          </ul>
        <% end %>
  </header>
</div>

<p class="notice"><%= notice %></p>
<p class="alert"><%= alert %></p>
